{{template "base" .}}

{{define "content"}}
    {{$res := index .Data "reservation"}}
    <div class="container">
        <div class="row mt-5">
            <div class="col mt-5">
                <h1 class="mt-5 mb-5">Reservation Summary</h1>
                <table class="table table-striped mb-5">
                    <thead></thead>
                    <tbody>
                        <tr>
                            <td>Name: </td>
                            <td>{{$res.FirstName}} {{$res.LastName}}</td>
                        </tr>
                        <tr>
                            <td>Room: </td>
                            <td>{{$res.Room.RoomName}}</td>
                        </tr>
                        <tr>
                            <td>Departure: </td>
                            <td>{{index .StringMap "start_date"}}</td>
                        </tr>
                        <tr>
                            <td>Arrival: </td>
                            <td>{{index .StringMap "end_date"}}</td>
                        </tr>
                        <tr>
                            <td>Email: </td>
                            <td>{{$res.Email}}</td>
                        </tr>
                        <tr>
                            <td>Phone: </td>
                            <td>{{$res.Phone}}</td>
                        </tr>
                    </tbody>
                </table>

            </div>
        </div>
    </div>
{{end}}
